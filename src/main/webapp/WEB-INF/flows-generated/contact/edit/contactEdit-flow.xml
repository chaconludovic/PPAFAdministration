<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />
	<!-- Flow vars -->
	<var name="tabBean" class="com.eldoraludo.ppafadministration.web.util.TabBean"/>

	<!-- Flow input parameters -->
	<!-- contact: the entity to edit. If null, then we create it here -->
	<input name="contact" required="false" value="flowScope.contact"/>	
	<on-start>
		<evaluate expression="contactController.newIfNull(contact)" result="flowScope.contact" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="contactSubEdit" else="contactEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="contactEdit" parent="#contactEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,contact.id,contactConverter.print(contact))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="contactController.save(contact)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="contactController.saveAndClose(contact)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,contact)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="contactController.delete(contact)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="contactSubEdit" view="contactEdit.xhtml" parent="#contactEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<!-- COMMON-EDIT -->
	<view-state id="contactEditCommon">
		<on-entry>
			<!-- Prefetch one to many lists and convert them to dataModel -->
			<evaluate expression="contact.suivicontacts" result="flowScope.suivicontacts" result-type="dataModel" />
			<evaluate expression="contact.ventes" result="flowScope.ventes" result-type="dataModel" />
		</on-entry>

		<!-- suivicontacts transitions (one-to-many) -->
		<transition on="addSuivicontact" to="addSuivicontact" />
		<transition on="editSuivicontact" to="editSuivicontact">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewSuivicontact" to="editSuivicontact">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
		<transition on="removeSuivicontact">
			<evaluate expression="contact.removeSuivicontact(flowScope.suivicontacts.selectedRow)" />
			<evaluate expression="messageUtil.info('status_removed_ok',resourceBundle.contact_suivicontacts)" />
		</transition>

		<!-- ventes transitions (one-to-many) -->
		<transition on="addVente" to="addVente" />
		<transition on="editVente" to="editVente">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewVente" to="editVente">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
		<transition on="removeVente">
			<evaluate expression="contact.removeVente(flowScope.ventes.selectedRow)" />
			<evaluate expression="messageUtil.info('status_removed_ok',resourceBundle.contact_ventes)" />
		</transition>
	</view-state>

	<!-- SUBFLOW suivicontacts (one-to-many) -->
	<subflow-state id="addSuivicontact" subflow="suivicontact/edit">
		<input name="sub" value="true" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="contact.addSuivicontact(currentEvent.attributes.suivicontact)" />
			<evaluate expression="messageUtil.info('status_added_new_ok',resourceBundle.contact_suivicontacts)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>
	<subflow-state id="editSuivicontact" subflow="suivicontact/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="suivicontact" value="flowScope.suivicontacts.selectedRow" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.contact_suivicontacts)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>


	<!-- SUBFLOW ventes (one-to-many) -->
	<subflow-state id="addVente" subflow="vente/edit">
		<input name="sub" value="true" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="contact.addVente(currentEvent.attributes.vente)" />
			<evaluate expression="messageUtil.info('status_added_new_ok',resourceBundle.contact_ventes)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>
	<subflow-state id="editVente" subflow="vente/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="vente" value="flowScope.ventes.selectedRow" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.contact_ventes)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>

	<end-state id="endEdit">
		<output name="contact" value="contact" />
	</end-state>
</flow>