<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />

	<!-- Flow input parameters -->
	<!-- frais: the entity to edit. If null, then we create it here -->
	<input name="frais" required="false" value="flowScope.frais"/>	
	<on-start>
		<evaluate expression="fraisController.newIfNull(frais)" result="flowScope.frais" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="fraisSubEdit" else="fraisEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="fraisEdit" parent="#fraisEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,frais.id,fraisConverter.print(frais))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="fraisController.save(frais)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="fraisController.saveAndClose(frais)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,frais)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="fraisController.delete(frais)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="fraisSubEdit" view="fraisEdit.xhtml" parent="#fraisEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<!-- COMMON-EDIT -->
	<view-state id="fraisEditCommon">

		<!-- membreppaf transitions (x-to-one) -->
		<transition on="selectMembreppaf" to="selectMembreppaf" />
		<transition on="editMembreppaf" to="editMembreppaf">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewMembreppaf" to="editMembreppaf">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
	</view-state>

	<!-- SUBFLOW membreppaf (x-to-one) -->
	<subflow-state id="selectMembreppaf" subflow="membreppaf">
		<input name="sub" value="true" />
		<transition on="membreppafSelected" to="startChoice">
			<evaluate expression="frais.setMembreppaf(currentEvent.attributes.membreppafSelected)" />
			<evaluate expression="messageUtil.info('status_selected_ok',resourceBundle.frais_membreppaf)" />
		</transition>
		<transition on="cancel" to="startChoice" />
	</subflow-state>
	<subflow-state id="editMembreppaf" subflow="membreppaf/edit">
		<input name="sub" value="true" />
		<input name="readonly" value="requestScope.paramReadonly" />
		<input name="membreppaf" value="frais.membreppaf" />
		<transition on="endEdit" to="startChoice">
			<evaluate expression="messageUtil.info('status_edited_ok',resourceBundle.frais_membreppaf)" />
		</transition>
		<transition on="cancelEdit" to="startChoice" />
	</subflow-state>

	<end-state id="endEdit">
		<output name="frais" value="frais" />
	</end-state>
</flow>