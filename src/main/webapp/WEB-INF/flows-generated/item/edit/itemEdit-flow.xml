<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="abstract/edit">
	
	<!-- note: this flow inherits from the abstract/edit flow -->

	<persistence-context />
	<!-- Flow vars -->
	<var name="tabBean" class="com.eldoraludo.ppafadministration.web.util.TabBean"/>

	<!-- Flow input parameters -->
	<!-- item: the entity to edit. If null, then we create it here -->
	<input name="item" required="false" value="flowScope.item"/>	
	<on-start>
		<evaluate expression="itemController.newIfNull(item)" result="flowScope.item" />
	</on-start>

	<decision-state id="startChoice">
		<if test="sub" then="itemSubEdit" else="itemEdit" />
	</decision-state>

	<!-- EDIT -->
	<view-state id="itemEdit" parent="#itemEditCommon">
		<on-render>
			<evaluate expression="flowsMenuHandler.updateMenu(flowRequestContext,item.id,itemConverter.print(item))" />
		</on-render>

		<transition on="send">
			<evaluate expression="messageUtil.info('status_submitted_ok')" />
		</transition>

		<transition on="save">
			<evaluate expression="itemController.save(item)" />
		</transition>

		<transition on="saveAndClose">
			<evaluate expression="itemController.saveAndClose(item)" />
		</transition>

		<transition on="close">
			<evaluate expression="primeFacesUtil.showAskForSaveDialog(persistenceContext,item)"/>
		</transition>

		<transition on="deleteAndClose" to="deleteAndClose">
			<evaluate expression="itemController.delete(item)" />
		</transition>
	</view-state>

	<!-- SUB-EDIT -->
	<view-state id="itemSubEdit" view="itemEdit.xhtml" parent="#itemEditCommon">
		<transition on="ok">
			<evaluate expression="primeFacesUtil.forceClose()" />
		</transition>
		<transition on="cancel" to="cancelEdit" />
	</view-state>

	<!-- COMMON-EDIT -->
	<view-state id="itemEditCommon">
		<on-entry>
			<!-- Prefetch one to many lists and convert them to dataModel -->
			<evaluate expression="item.itemlieudestockages" result="flowScope.itemlieudestockages" result-type="dataModel" />
			<evaluate expression="item.ventes" result="flowScope.ventes" result-type="dataModel" />
		</on-entry>

		<!-- itemlieudestockages transitions (one-to-many) -->
		<transition on="addItemlieudestockage" to="addItemlieudestockage" />
		<transition on="editItemlieudestockage" to="editItemlieudestockage">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewItemlieudestockage" to="editItemlieudestockage">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
		<transition on="removeItemlieudestockage">
			<evaluate expression="item.removeItemlieudestockage(flowScope.itemlieudestockages.selectedRow)" />
			<evaluate expression="messageUtil.info('status_removed_ok',resourceBundle.item_itemlieudestockages)" />
		</transition>

		<!-- ventes transitions (one-to-many) -->
		<transition on="addVente" to="addVente" />
		<transition on="editVente" to="editVente">
			<set name="requestScope.paramReadonly" value="false" type="boolean" />
		</transition>
		<transition on="viewVente" to="editVente">
			<set name="requestScope.paramReadonly" value="true" type="boolean" />
		</transition>
		<transition on="removeVente">
			<evaluate expression="item.removeVente(flowScope.ventes.selectedRow)" />
			<evaluate expression="messageUtil.info('status_removed_ok',resourceBundle.item_ventes)" />
		</transition>
	</view-state>

	<!-- SUBFLOW itemlieudestockages (one-to-many) -->
